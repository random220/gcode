function cont_config() {
  local cont=$1
  case $cont in
    c6)
      cent_fix_c6_repo
      cent_install $cont
      docker exec -ti $cont su - om -c 'ssh-keygen -t rsa -b 2048 -N "" -f ~/.ssh/id_rsa -C om'
      ;;
    c7)
      cent_install $cont
      docker exec -ti $cont su - om -c 'ssh-keygen -t rsa -b 2048 -N "" -f ~/.ssh/id_rsa -C om'
      ;;
    c8)
      cent_install $cont
      docker exec -ti $cont su - om -c 'ssh-keygen -t rsa -b 2048 -N "" -f ~/.ssh/id_rsa -C om'
      ;;
    ub)
      ub_install $cont
      docker exec -ti $cont su - om -c 'ssh-keygen -t rsa -b 2048 -N "" -f ~/.ssh/id_rsa -C om'
      ;;
    *)
      ;;
  esac
}


function cont_start() {
  local name=$1
  local image
  case $name in
    c6)
      image='centos:6'
      ;;

    c7)
      image='centos:7'
      ;;

    c8)
      image='centos:8'
      ;;

    ub)
      image='ubuntu:20.04'
      ;;

    *)
      return 0
      ;;
  esac

  # does the container exist?
  local id
  id=$(docker ps -aqf name=$name)
  if [[ $id == '' ]]; then
    # does not exist
    # create and install packages
    docker run -itd -h $name --name $name $image
    cont_config $name
  else
    id=$(docker ps -qf name=$name)
    if [[ $id == '' ]]; then
      # no, not alive
      # just start and you are done
      docker start $name
    else
      # yes, alive
      # nothing to do
      :
    fi
  fi

  # get in
  docker exec -ti $name su - om
}

function d6() {
  cont_start c6
}
function d7() {
  cont_start c7
}

function d8() {
  cont_start c8
