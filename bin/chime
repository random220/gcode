#!/bin/bash

if [[ $(uname) != Darwin ]]; then
    exit 0
fi

pkill -f chime
if [[ "$(basename "$0")" == nochime ]] ; then
    exit 0
fi

(
while true; do
    min=$(date +%M)
    soundfile=~/gcode/bin/chimes/$min.m4a
    if [[ -f $soundfile ]]; then
        afplay $soundfile
    fi
    sleep 60
done
) >/dev/null 2>&1 &

