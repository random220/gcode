#!/bin/bash

bindir=$(dirname $0)

printf "Push to /b/om/t/CRUZER ? (y/n): "
read yesno
if [[ $yesno != 'y' ]]; then
  exit 1
fi

echo
echo "Mounting T ..."
$bindir/tmount || exit 1

echo
echo "Mounting V ..."
$bindir/vmount || exit 1

echo
echo "Syncing ..."
cmd="rsync -a --delete /b/om/p/CRUZER/ /b/om/t/CRUZER/"
echo "doing: $cmd"
$cmd

