#!/bin/bash

bindir=$(dirname $0)
target_machine='crondite.duckdns.org'
ifconfig -a|egrep 'inet .*192\.168\.10\.' >/dev/null 2>&1
if [[ $? == 0 ]]; then
  target_machine='192.168.10.180'
fi

printf "Pull from $target_machine? (y/n): "
read yesno
if [[ $yesno != 'y' ]]; then
  exit 1
fi

$bindir/hmount
$bindir/vmount

echo
echo "Syncing ..."
cmd="rsync -a --delete om@$target_machine:/b/om/p/CRUZER/ /b/om/p/CRUZER/"
echo "doing: $cmd"
$cmd
$bindir/humount

