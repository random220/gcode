#!/bin/bash
myname=$(basename "$0")
vmx_books='/Users/omandal/b/VMs/rk-books.vmwarevm/rk-books.vmx'
vmx_cruzer='/Users/omandal/b/VMs/rk9.cruzer.vmwarevm/rk9.cruzer.vmx'
PORT=8080

vmip=''
main() {
    if [[ $myname == books ]]; then
        vmstart "$vmx_books"
        show_ssh_code
        exit 0
    elif [[ $myname == vooks ]]; then
        vmstart "$vmx_cruzer"
        show_ssh_code 'vooks'
        exit 0
    elif [[ $myname == bookend ]]; then
        vmstop "$vmx_books"
    fi
}

show_ssh_code() {
    local host="$1"
    cat <<__EOF__


# ======================================================

doit() {

    umask 077
    rm -rf ~/.ssh/$host
    mkdir -p ~/.ssh/$host

    cat <<EOF >~/.ssh/$host/config
StrictHostKeyChecking=no
CheckHostIP=no
EscapeChar=~
UserKnownHostsFile=/dev/null
LogLevel ERROR

Host $host
    User om
    HostName $vmip
    Port 22
    ControlPath ~/.ssh/$host/ctrl-%l-to-%h
    ControlMaster auto
    ControlPersist 10m
    ServerAliveInterval 180
    LocalForward $PORT localhost:$PORT
EOF

    #ssh -t -t -F ~/.ssh/$host/config $host "kill -9 -1"
    ssh -t -t -F ~/.ssh/$host/config $host "vmount"
    ssh -t -t -F ~/.ssh/$host/config $host "pyweb $PORT"
}

doit

# ======================================================



__EOF__
}


vmstart() {
    local vmx="$1"
    vmrun start "$vmx"
    if [[ $? != 0 ]]; then
        exit $?
    fi
    while true; do
        ip=$(vmrun getGuestIPAddress "$vmx" 2>/dev/null)
        if [[ $ip =~ ^[0-9\.]+$ ]]; then
            vmip=$ip
            return 0
        fi
        sleep 1
    done
}

vmstop() {
    local vmx="$1"
    vmrun revertToSnapshot "$vmx" 00
}

main

