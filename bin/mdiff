#!/bin/bash

dir1='/Users/omandal/Music/iTunes/iTunes Media/Music'
dir2=$1
if [[ ! -d $dir1 ]]; then
  echo "Cannot file \"$dir1\""
  exit 1
fi
if [[ ! -d $dir2 ]]; then
  echo "$0 dir2"
  exit 1
fi

rsync -a --delete "$dir1" | grep -v '\.DS_Store'|grep '^-' >.me.txt
rsync -a --delete "$dir2" | grep -v '\.DS_Store'|grep '^-' >.them.txt

vimdiff .me.txt .them.txt
