#!/bin/bash

echo -n "Password: "
read -s SSHPASS
export SSHPASS

umask 077
rm -rf ~/.ssh/nfash
mkdir ~/.ssh/nfash

os=$(uname -o)

nuchost='192.168.10.180'
port=22
if [[ "$os" == 'Darwin' ]]; then
  # Mac
  pingcmd="ping -t 2 -c 1 $nuchost >/dev/null 2>&1"
elif [[ "$os" == 'Msys' ]]; then
  # Windows bash
  pingcmd="ping -n 1 $nuchost >/dev/null 2>&1"
fi

eval "$pingcmd"

if [[ $? != 0 ]]; then
    nuchost='crondite.duckdns.org'
    port=2222
fi

cat <<EOF >~/.ssh/nfash/config
StrictHostKeyChecking=no
CheckHostIP=no
EscapeChar=~
UserKnownHostsFile=/dev/null
LogLevel ERROR

Host nuc
    User om
    Hostname $nuchost
    Port $port
EOF

export SSH_ASKPASS=~/gcode/bin/ssh-askpass
export SSH_ASKPASS_REQUIRE=force

scp -F $HOME/.ssh/nfash/config nuc:.ssh/fash/id'*' ~/.ssh/nfash

out=$(ssh -F ~/.ssh/nfash/config nuc multipass ls)


# %  ssh -F ~/.ssh/nfash/config nuc multipass ls
# Name                    State             IPv4             Image
# favpn                   Running           10.88.161.250    Ubuntu 22.04 LTS
#                                           10.15.0.4

ipaddr=$(grep 'favpn' <<<"$out" | grep Ubuntu|awk '{print $3}')
# 10.88.161.250

cat <<EOF >>~/.ssh/nfash/config
Host nfash
    User om
    Hostname $ipaddr
    IdentityFile ~/.ssh/nfash/id_ed25519
    ProxyJump nuc
    DynamicForward 9999
    LocalForward 3129 localhost:3128      # squid
EOF

ssh -F ~/.ssh/nfash/config nfash

