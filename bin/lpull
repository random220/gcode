#!/bin/bash

bindir=$(dirname $0)

printf "Pull from /b/om/l/CRUZER ? (y/n): "
read yesno
if [[ $yesno != 'y' ]]; then
  exit 1
fi

printf "Are you doubly sure? (YES/n): "
read yesno
if [[ $yesno != 'YES' ]]; then
  exit 1
fi

$bindir/lmount || exit 1
$bindir/vmount || exit 1

echo
echo "Syncing ..."
cmd="rsync -a --delete /b/om/l/CRUZER/ /b/om/p/CRUZER/"
echo "doing: $cmd"
$cmd

