#!/bin/bash
(
export PATH='/home/om/gcode/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin'

onerun()
{
  tmpfile=$(mktemp)
  cat <<EOF | nc -l 8888 >$tmpfile
HTTP/1.1 200 OK
Date: Sun, 18 Oct 2009 08:56:53 GMT
Server: Apache/2.2.14 (Win32)
Last-Modified: Sat, 20 Nov 2004 07:16:26 GMT
ETag: "10000000565a5-2c-3e94b66c2e680"
Accept-Ranges: bytes
Content-Length: 37
Connection: close
Content-Type: text/html
X-Pad: avoid browser bug

<html><body><h1>Ok</h1></body></html>
EOF
  
  grep 'GET /kodido ' $tmpfile >/dev/null 2>&1
  if [[ $? == 0 ]]; then
    $HOME/gcode/bin/k
  else
    echo no
  fi
  rm $tmpfile
}

tmpfile=$(mktemp)
nc localhost 8888 >$tmpfile
ls -ld $tmpfile
if [[ -s $tmpfile ]]; then
  rm $tmpfile
  exit 0
else
  rm $tmpfile
fi

while :; do
  onerun
done

) >/dev/null 2>&1
