#!/bin/bash

set -x

exists='no'
running='no'

myname=$(basename $0)

case $myname in
  dmy)
  _name='myc7'
  _image='myc7:latest'
  _u='om'
  ;;

  dc7)
  _name='c7'
  _image='centos:7'
  _u='root'
  ;;

  dc8)
  _name='c8'
  _image='centos:8'
  _u='root'
  ;;

  dub20)
  _name='ub20'
  _image='ubuntu:20.04'
  _u='root'
  ;;
esac

n=$(docker ps -q --filter "name=$_name"|wc -l|sed 's/ //g')
if [[ $n != 0 ]]; then
  running='yes'
fi

if [[ $running == 'no' ]]; then
  n=$(docker ps -aq --filter "name=$_name"|wc -l|sed 's/ //g')
  if [[ $n != 0 ]]; then
    exists='yes'
  fi
  if [[ $exists == 'no' ]]; then
    docker run -itd -h $_name --name $_name --mount type=bind,source=$HOME/b/,target=/b $_image bash
    exists='yes'
    running='yes'
  else
    docker start $_name
    running='yes'
  fi
fi

docker exec -u $_u -ti $_name bash


