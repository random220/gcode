#!/bin/bash

main() {
    docker rm -f ub
    docker run -itd --name ub -h ub \
        -p 9999:9999 \
        -p 3128:3128 \
        -p 3129:3129 \
        -p 3122:3122 \
        -p 5522:5522 \
        -v ~/Downloads:/home/om/d \
        myub bash

    adjust_sshconfig
    copy_gcode
    pkill -f firefox
    ff 3128
    ff 3129
    docker exec -it ub bash
}

adjust_sshconfig() {
    cat <<EOF | docker exec -u root -i ub bash -
umask 077

rm -rf ~om/.ssh
mkdir ~om/.ssh

cat <<EOF_ >~om/.ssh/config
StrictHostKeyChecking=no
CheckHostIP=no
EscapeChar=~
UserKnownHostsFile=/dev/null
LogLevel ERROR

Host nuc
    User om
    HostName 192.168.10.180
    Port 22
    ControlPath ~/.ssh/ctrl-%l-to-%h
    ControlMaster auto
    ControlPersist 10m
    ServerAliveInterval 180
    DynamicForward 9999
    # -g
    GatewayPorts true
    # squid
    LocalForward 3128 localhost:3128
    LocalForward 3122 192.168.10.182:22
    LocalForward 5522 192.168.10.180:22

Host cron
    User om
    HostName 76.236.30.161
    Port 22
    ControlPath ~/.ssh/ctrl-%l-to-%h
    ControlMaster auto
    ControlPersist 10m
    ServerAliveInterval 180
    DynamicForward 9999
    # -g
    GatewayPorts true
    # squid
    LocalForward 3128 localhost:3128
    LocalForward 3122 192.168.10.182:22
    LocalForward 5522 192.168.10.180:22

Host data
    User om
    HostName localhost
    Port 3122
    ControlPath ~/.ssh/ctrl-%l-to-%h
    ControlMaster auto
    ControlPersist 10m
    ServerAliveInterval 180

EOF_
chown -R om:om ~om/.ssh
EOF

}

copy_gcode() {
    docker cp ~/gcode/ ub:/tmp/.gcode/
    cat <<EOF | docker exec -u root -i ub bash -
umask 077
rm -rf ~om/gcode
mv /tmp/.gcode ~om/gcode
chown -R om:om ~om/gcode

cat <<EOF_ | su om -c bash -
cd
. gcode/bin/gcode.0
EOF_

EOF
}


main



