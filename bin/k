#!/bin/bash

export PATH="$HOME/bin:$HOME/gcode/bin:/usr/local/bin:/bin:/sbin:/usr/bin:/usr/sbin"
export DISPLAY=:0.0

ssh_and_k()
{
  remote='192.168.10.180'
  x=$(ifconfig -a |grep '192\.168\.10\.')
  if [[ $x == '' ]]; then
    remote='crondite.duckdns.org'
  fi
  ssh -t om@$remote gcode/bin/k
}

k()
{
  tmpfile=$(mktemp)

  cat <<EOF >$tmpfile
(
export PATH='/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin'

pkill kodi
pkill kodi-x11
sudo service lightdm stop
sudo service lightdm start
sleep 5
export DISPLAY=:0.0
nohup /usr/bin/kodi &
) >/dev/null 2>&1
EOF

  bash $tmpfile
  sleep 2
  rm $tmpfile
}

x=$(ifconfig -a |grep '192\.168\.10\.180')
if [[ $x == '' ]]; then
  ssh_and_k
else
  k
fi
