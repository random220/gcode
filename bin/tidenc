#!/bin/bash

f=$HOME/b/om/p/CRUZER/gitted/sandbox/tiddly.html

if [[ ! -f $f ]]; then
  echo "Not found: $f"
  exit 1
fi

cat $f|gzip -|openssl enc -aes256|openssl enc -base64 >__a.txt
v=$(openssl version)
u=$(uname -a)
d=$(date)
cat <<EOF >tiddly-enc.sh
#!/bin/bash

# $v
# $u
# $d

cat <<EOF | openssl enc -d -base64|openssl enc -d -aes256 | gunzip - >tiddly.html
EOF

cat __a.txt  >>tiddly-enc.sh
echo 'EOF' >>tiddly-enc.sh

echo >>tiddly-enc.sh
echo 'exit' >>tiddly-enc.sh
echo >>tiddly-enc.sh

cat $0 >>tiddly-enc.sh
rm -f __a.txt



