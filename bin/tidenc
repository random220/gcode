#!/bin/bash

f=$HOME/b/om/p/CRUZER/gitted/sandbox/tiddly.html

if [[ ! -f $f ]]; then
  echo "Not found: $f"
  exit 1
fi

cat $f|gzip -|openssl enc -aes256 -md md5|openssl enc -base64 >__a.txt
v=$(openssl version)
u=$(uname -a)
d=$(date)
f=tiddly-enc-$(date +"%Y-%m-%d").sh
cat <<EOF >$f
#!/bin/bash

# $v
# $u
# $d

cat <<EOF | openssl enc -d -base64|openssl enc -d -aes256 -md md5| gunzip - >tiddly.html
EOF

cat __a.txt  >>$f
echo 'EOF' >>$f

echo >>$f
echo 'exit' >>$f
echo >>$f

cat $0 >>$f
rm -f __a.txt



