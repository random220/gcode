#!/bin/bash

set -x
# % multipass ls
# Name                    State             IPv4             Image
# favpn                   Running           192.168.64.3     Ubuntu 20.04 LTS

ip=$(multipass ls|grep -E '^favpn *Running'|awk '{print $3}')

umask 077;
d=$(mktemp -d)
echo "==> $d"
mkdir "$d/.ssh"
cd "$d/.ssh"
cat <<EOF  >config
StrictHostKeyChecking=no
CheckHostIP=no
EscapeChar=~
UserKnownHostsFile=/dev/null
LogLevel ERROR

Host vpn
    User om
    Hostname $ip
    IdentityFile $d/.ssh/id_ed25519
    DynamicForward 9999

EOF

ssh-keygen -t ed25519 -N '' -f id_ed25519
multipass transfer id_ed25519.pub fvpn:/tmp/a.txt
cat <<'EOF' | multipass exec fvpn bash -
sudo mv /tmp/a.txt /home/om/.ssh/authorized_keys
sudo chown -R om:om /home/om
sudo chmod 644 /home/om/.ssh/authorized_keys
EOF

ssh -F "$d/.ssh/config" vpn
cd /
rm -rf "$d"
