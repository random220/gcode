#!/bin/bash

set -x



umask 077
rm -rf ~/.ssh/x
mkdir -p ~/.ssh/x
ssh-keygen -t ed25519 -N '' -f ~/.ssh/x/id_ed25519
ssh='ssh -F '$HOME/.ssh/x/config
scp='scp -F '$HOME/.ssh/x/config

establish_ssh() {
    nucip="$1"
    nucport="$2"
    cat <<EOF >~/.ssh/x/config
StrictHostKeyChecking=no
CheckHostIP=no
EscapeChar=~
UserKnownHostsFile=/dev/null
LogLevel ERROR
ConnectTimeout 3

Host nuc
    User om
    HostName $nucip
    Port $nucport
    IdentityFile ~/.ssh/x/id_ed25519
    GatewayPorts true
    LocalForward 3128 localhost:3128

EOF

    $scp $HOME/.ssh/x/id_ed25519.pub nuc:.ssh/authorized_keys || return 1
    return 0
}

establish_ssh '192.168.10.180' 22 || establish_ssh '76.236.30.161' 2222 || exit 1
$scp nuc:.ssh/fash/id_ed25519 ~/.ssh/x/id_ed25519.fash
faship=$($ssh nuc 'cat .ssh/config.d/fash' | grep Hostname|awk '{print $2}')

cat <<EOF >>~/.ssh/x/config

Host nucback
    User om
    HostName $nucip
    Port $nucport
    IdentityFile ~/.ssh/x/id_ed25519
    GatewayPorts true
    LocalForward 3128 localhost:3128
    LocalForward 2222 $faship:22
    LocalForward 2282 192.168.10.182:22
    LocalForward 2280 192.168.10.180:22
    RequestTTY no
    RemoteCommand cat

Host fashback
    User om
    HostName localhost
    IdentityFile ~/.ssh/x/id_ed25519.fash
    Port 2222
    GatewayPorts true
    LocalForward 3129 localhost:3128
    RequestTTY no
    RemoteCommand cat
EOF

$ssh nucback >/dev/null 2>&1 &
$ssh fashback >/dev/null 2>&1 &

