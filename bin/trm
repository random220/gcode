#!/bin/bash

set -x
umask 077
app=$(readlink -f $0)
torrent=$(readlink -f "$1")
if [[ "$1" == '' ]]; then
  exit 0
fi

if [[ ! -f "$1" ]]; then
  exit 0
fi

( cd ~/.config/transmission && rm -rf blocklists resume torrents stats.json dht.dat )

pid=$$

mkdir -p ~/bin
cat <<EOF >~/bin/killme
#!/bin/bash
kill -SIGINT $pid
EOF

chmod 700 ~/bin/killme

# % df -kh .
# Filesystem              Size  Used Avail Use% Mounted on
# 192.168.10.182:/shares  2.0G  4.0K  2.0G   1% /home/om/x

(cd ~/Downloads/uu && df -kh .)|grep 192.168.10.182
if [[ $? != 0 ]]; then
    mkdir -p ~/Downloads/uu

    timeout 5 ping -c 1 192.168.10.182
    if [[ $? == 0 ]]; then
        bash -c "sshfs 192.168.10.182:/shares/data/movies/uu $HOME/Downloads/uu"
    fi
fi

exec transmission-cli -f ~/bin/killme -w ~/Downloads/uu "$1"
