#!/bin/bash

bindir=$(dirname $0)

printf "Push to /b/om/l/CRUZER ? (y/n): "
read yesno
if [[ $yesno != 'y' ]]; then
  exit 1
fi

$bindir/vmount || exit 1
$bindir/lmount || exit 1

echo
echo "Syncing ..."
cmd="rsync -a --delete /b/om/p/CRUZER/ /b/om/l/CRUZER/"
echo "doing: $cmd"
$cmd

lastsync=$(date "+lastsync--%Y-%m-%d--%H-%M-%S")
(cd /b/om/l && (rm -f lastsync*; touch $lastsync))
