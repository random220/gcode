#!/bin/bash

cd ~/b/om
rm -rf __xxx
rm -rf __chromecache

ls -1trd \
`pwd`/tiddly*.html \
~/tiddly*.html \
~/Desktop/tiddly*.html \
~/Downloads/tiddly*.html \
>/tmp/tids.txt 2>/dev/null

n=$(wc -l /tmp/tids.txt|awk '{print $1}')

if [[ $n == '0' ]]; then
    rm -f /tmp/tids.txt
    exit 0
elif [[ $n == '1' ]]; then
    f=$(cat /tmp/tids.txt)
    echo "Using \"$f\""
    rm -f /tmp/tids.txt
else
    f=$(tail -1 /tmp/tids.txt)
    m=$(( n - 1 ))
    rest=$(head -$m /tmp/tids.txt)
    rm -f /tmp/tids.txt
    echo "About to delete these files"
    echo
    echo "$rest"
    echo
    echo "And use this"
    echo "$f"
    echo
    echo "Is that ok? [y/n]: "
    read ok
    if [[ $ok != 'y' ]]; then
        exit 0
    fi

    while IFS= read -r line; do
        rm -f "$line"
    done <<<"$rest"
fi

cd ~/b/om
rm -rf __yyy

echo -n 'Password: '
read -s passwd
export mypass="$passwd"

rm -rf __yyy
genc -t __yyy -d tiddly.html.git.tar.gpg
if [[ ! -f __yyy/tiddly.html.git.tar.gpg.plain ]]; then
    echo "Failed to extract __yyy/tiddly.html.git.tar.gpg.plain"
    exit 1
fi
cd __yyy
tar xf tiddly.html.git.tar.gpg.plain
rm -f tiddly.html.git.tar.gpg.plain
git reset --hard
mv "$f" tiddly.html
git add tiddly.html
git commit -m "$(date)"
git gc --prune=now
git show HEAD >diff
gzip diff
genc -t x .git
mv x/.git.tar.gpg tiddly.html.git.tar.gpg
rm -rf x

cat <<EOF

======================================================
cd ~/b/om/__yyy
mv tiddly.html.git.tar.gpg ~/b/om
scp diff.gz cron:.

ssh cron
gunzip diff.gz
vmount
cp ~/b/om/p/CRUZER/gitted/sandbox/tiddly.html .
patch tiddly.html <diff
tt
vumount
rm diff
exit

cd
rm -rf ~/b/om/__yyy
======================================================

EOF

