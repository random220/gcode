#!/bin/bash

if [[ ! -f ~/.profile ]]; then

    if [[ "$SHELL" == '/bin/ksh' ]]; then
        cat <<'EOF' >~/.profile
alias bb='export SHELL=/bin/bash; exec /bin/bash'
alias tt='tmux a'
EOF
    else
        cat <<'EOF'  >~/.profile
if [[ -f ~/.bashrc ]]; then
  . ~/.bashrc
fi
EOF
    fi
fi

if [[ ! -d ~/gcode ]]; then
    cd
    git clone https://github.com/random220/gcode
fi

if [[ ! -d ~/.gcode ]]; then
    mkdir ~/.gcode
    cd ~/.gcode
    ln -s ~/gcode/sundry/.bashrc
    ln -s ~/gcode/sundry/.aliases

    cd
    rm -f .vimrc .tmux.conf
    ln -s ~/gcode/sundry/.vimrc
    ln -s ~/gcode/sundry/.tmux.conf 
fi

cat <<'EOF' >>~/.bashrc
if [[ -f ~/.gcode/.bashrc ]]; then
    . ~/.gcode/.bashrc
fi
EOF

cd
rm -f .bash_profile
cat <<'EOF' >.bash_profile
    if [[ -f ~/.bashrc ]]; then
        . ~/.bashrc
    fi
EOF

