#!/bin/bash
vmrun='/Applications/VMware Fusion.app/Contents/Library/vmrun'

case "$(basename "$0")" in
  startv)
    vmx=/Users/omandal/b/VMs/ub24-luks.vmwarevm/ub24-luks.vmx
    hostname=v_
    port=3131
    ;;

  startu)
    vmx=/Users/omandal/b/VMs/ub24-v.vmwarevm/ub24-v.vmx
    hostname=v_
    port=3131
    ;;

  startp)
    vmx=/Users/omandal/b/VMs/rk9-pytest.vmwarevm/rk9-pytest.vmx
    hostname=v_
    port=3131
    ;;

  startb)
    vmx=/Users/omandal/b/VMs/rk9-books.vmwarevm/rk9-books.vmx
    hostname=v_
    port=3131
    ;;

  *)
    exit
    ;;
esac


"$vmrun" start "$vmx"
ip=''
n=0
while true; do
    n=$(( n + 1 ))
    if [[ $n == 9 ]]; then
        echo 'Timed out'
        exit 1
    fi
    ip=$("$vmrun" getGuestIPAddress "$vmx")
    if [[ "$ip" =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$ ]]; then
        break
    else
        sleep 5
    fi
done

umask 077
rm -f ~/.ssh/config.next

cat ~/.ssh/config \
| perl -pe 's/\n/\\n/gs' \
| perl -pe 's{#\s*VSTART_BEGIN.*?VSTART_END.*?\\n}{}; s/\\n/\n/g' \
> ~/.ssh/config.next

cat <<EOF >>~/.ssh/config.next
# VSTART_BEGIN =====
Host $hostname
    Hostname $ip
    User om
    ControlMaster auto
    ControlPath ~/.ssh/ssh_mux_%h_%p_%r
    ControlPersist yes
    ServerAliveInterval 300
    LocalForward $port localhost:8080

# VSTART_END =====
EOF

mv ~/.ssh/config.next ~/.ssh/config

cat <<EOF

# ---------------------------------------
ssh v_
vmount
export ALL_PROXY=http://127.0.0.1:3128
export http_proxy=http://127.0.0.1:3128
tmux
vmount
fbinst
open http://localhost:3131/files/b/om/p/CRUZER/mydata/OM/02-MONEYPIT/00-TAX/Tax2024/
# ---------------------------------------

EOF
