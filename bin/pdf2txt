#!/bin/bash

read -p "pdf file: " f
f=$(eval ls -1 "$f" 2>/dev/null)
if [[ $? != 0 ]]; then
  echo Not found
  exit 1
fi


read -p "first page: " p1
read -p "last page: " p2

d=$(mktemp -d)
pdftk "$f" cat ${p1}-${p2} output "$d"/a.pdf
cd "$d"
pdftoppm -png -r 300 a.pdf aa
for i in aa*png; do
    tesseract $i $i
done
rm *pdf *png
cat aa*txt >a.txt
rm aa*txt

cd
find "$d"

