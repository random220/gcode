#!/bin/bash

cd
rm -rf ~/'Calibre Library'
rm -rf ~/'Library/Application Support/calibre-ebook.com'
rm -rf ~/'Library/Preferences/calibre'
rm -rf ~/'Library/Preferences/com.calibre-ebook.ebook-viewer.plist'
rm -rf ~/'Library/Preferences/net.kovidgoyal.calibre.plist'
rm -rf ~/'Library/Preferences/com.calibre-ebook.ebook-viewer.plist'
rm -rf ~/'Library/Saved Application State/net.kovidgoyal.calibre.savedState'
rm -rf ~/'Library/Caches/calibre'
rm -rf ~/'Library/Caches/calibre-ebook.com'

(
ls -ld  ~/'Calibre Library'
ls -ld  ~/'Library/Application Support/calibre-ebook.com'
ls -ld  ~/'Library/Preferences/calibre'
ls -ld  ~/'Library/Preferences/com.calibre-ebook.ebook-viewer.plist'
ls -ld  ~/'Library/Preferences/net.kovidgoyal.calibre.plist'
ls -ld  ~/'Library/Preferences/com.calibre-ebook.ebook-viewer.plist'
ls -ld  ~/'Library/Saved Application State/net.kovidgoyal.calibre.savedState'
ls -ld  ~/'Library/Caches/calibre'
ls -ld  ~/'Library/Caches/calibre-ebook.com'
) 2>/dev/null
