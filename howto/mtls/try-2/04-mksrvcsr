cat <<"EOF" >out/server.cnf.1
[ req ]
default_bits       = 2048
distinguished_name = req_distinguished_name
req_extensions     = req_ext
prompt             = no

[ req_distinguished_name ]
C  = US
ST = California
L  = San Jose
O  = Crondite Inc.
OU = Pantry
CN = The Gaia Server
emailAddress = shubro@crondite.com

[ req_ext ]
subjectAltName = @alt_names

[ alt_names ]
DNS.a = gaia1.crondite.com
DNS.b = gaia2.crondite.com
DNS.c = gaia3.crondite.com
DNS.d = gaia4.crondite.com
DNS.e = gaia5.crondite.com
DNS.f = gaia6.crondite.com
DNS.g = gaia7.crondite.com
DNS.h = gaia8.crondite.com
DNS.0 = gaia.crondite.com
EOF

openssl req -new -key out/server-key.pem -out out/server.csr -config out/server.cnf.1

